<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Поля для привязки данных, например, lesson: LessonEntity -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/lessonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название пары"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:20 - 19:50"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/lessonTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Преподаватель"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/lessonRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аудитория"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</layout>